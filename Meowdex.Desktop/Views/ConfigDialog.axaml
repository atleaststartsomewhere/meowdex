<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Meowdex.Desktop.Views.ConfigDialog"
        Width="420"
        Height="320"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        Title="Config">
  <StackPanel Spacing="12" Margin="16">
    <TextBlock Text="Config" FontSize="20" FontWeight="Bold" />

    <StackPanel Spacing="6">
      <TextBlock Text="Top Cat Count (default 3)" />
      <NumericUpDown Minimum="1" Maximum="20" Value="{Binding TopCatCount}" />
    </StackPanel>

    <StackPanel Spacing="6">
      <TextBlock Text="Desired Backfills Per Mask" />
      <NumericUpDown Minimum="0" Maximum="20" Value="{Binding BackfillsPerMask}" />
    </StackPanel>

    <StackPanel Spacing="6">
      <TextBlock Text="Exclude Masks With Less Than N 7s" />
      <NumericUpDown Minimum="0" Maximum="7" Value="{Binding MinMaskSevenCount}" />
    </StackPanel>

    <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
      <Button Click="OnCancel">Cancel</Button>
      <Button Classes="primary" Click="OnSave">Apply</Button>
    </StackPanel>
  </StackPanel>
</Window>
