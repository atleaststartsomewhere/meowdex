<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Meowdex.Desktop.Views.EditCatOverlayView"
             x:Name="Root">
  <Grid>
    <Border Classes="overlay-panel"
            Margin="0"
            Padding="24">
      <Grid RowDefinitions="Auto,* ,Auto">
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,12">
          <TextBlock Text="{Binding Editor.Cat.Id, StringFormat=Edit Cat # {0}}" FontSize="20" FontWeight="Bold" />
          <Button Grid.Column="1" Content="âœ•" Command="{Binding CancelCommand}" />
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
          <StackPanel Spacing="12">
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto">
              <StackPanel Grid.Row="0" Grid.Column="0" Spacing="6">
                <TextBlock Text="Name" />
                <TextBox Text="{Binding Editor.Cat.Name}" />
              </StackPanel>

              <StackPanel Grid.Row="0" Grid.Column="1" Spacing="6">
                <TextBlock Text="Gender" />
                <ComboBox ItemsSource="{Binding Editor.GenderOptions}" SelectedItem="{Binding Editor.Cat.Gender}" />
              </StackPanel>

              <StackPanel Grid.Row="1" Grid.Column="0" Spacing="6">
                <TextBlock Text="Sexuality" />
                <ComboBox ItemsSource="{Binding Editor.SexualityOptions}" SelectedItem="{Binding Editor.Cat.Sexuality}" />
              </StackPanel>

              <StackPanel Grid.Row="1" Grid.Column="1" Spacing="6">
                <TextBlock Text="Retired" />
                <CheckBox IsChecked="{Binding Editor.Cat.IsRetired}" Content="Retired" />
              </StackPanel>

              <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Spacing="6">
                <TextBlock Text="Notes" />
                <TextBox Text="{Binding Editor.Cat.Notes}" AcceptsReturn="True" Height="80" />
              </StackPanel>
            </Grid>

            <TextBlock Text="Stats" FontWeight="SemiBold" />
            <Grid ColumnDefinitions="2*,*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto">
              <TextBlock Grid.Row="0" Grid.Column="0" Text="Stat" FontWeight="SemiBold" />
              <TextBlock Grid.Row="0" Grid.Column="1" Text="Current" FontWeight="SemiBold" />
              <TextBlock Grid.Row="0" Grid.Column="2" Text="Base (0-7)" FontWeight="SemiBold" />

              <TextBlock Grid.Row="1" Grid.Column="0" Text="Strength" />
              <NumericUpDown Grid.Row="1" Grid.Column="1" Value="{Binding Editor.Cat.StrengthCurrent}" Minimum="0" Maximum="99" />
              <NumericUpDown Grid.Row="1" Grid.Column="2" Value="{Binding Editor.Cat.StrengthBase}" Minimum="0" Maximum="7" />

              <TextBlock Grid.Row="2" Grid.Column="0" Text="Dexterity" />
              <NumericUpDown Grid.Row="2" Grid.Column="1" Value="{Binding Editor.Cat.DexterityCurrent}" Minimum="0" Maximum="99" />
              <NumericUpDown Grid.Row="2" Grid.Column="2" Value="{Binding Editor.Cat.DexterityBase}" Minimum="0" Maximum="7" />

              <TextBlock Grid.Row="3" Grid.Column="0" Text="Stamina" />
              <NumericUpDown Grid.Row="3" Grid.Column="1" Value="{Binding Editor.Cat.StaminaCurrent}" Minimum="0" Maximum="99" />
              <NumericUpDown Grid.Row="3" Grid.Column="2" Value="{Binding Editor.Cat.StaminaBase}" Minimum="0" Maximum="7" />

              <TextBlock Grid.Row="4" Grid.Column="0" Text="Intellect" />
              <NumericUpDown Grid.Row="4" Grid.Column="1" Value="{Binding Editor.Cat.IntellectCurrent}" Minimum="0" Maximum="99" />
              <NumericUpDown Grid.Row="4" Grid.Column="2" Value="{Binding Editor.Cat.IntellectBase}" Minimum="0" Maximum="7" />

              <TextBlock Grid.Row="5" Grid.Column="0" Text="Speed" />
              <NumericUpDown Grid.Row="5" Grid.Column="1" Value="{Binding Editor.Cat.SpeedCurrent}" Minimum="0" Maximum="99" />
              <NumericUpDown Grid.Row="5" Grid.Column="2" Value="{Binding Editor.Cat.SpeedBase}" Minimum="0" Maximum="7" />

              <TextBlock Grid.Row="6" Grid.Column="0" Text="Charisma" />
              <NumericUpDown Grid.Row="6" Grid.Column="1" Value="{Binding Editor.Cat.CharismaCurrent}" Minimum="0" Maximum="99" />
              <NumericUpDown Grid.Row="6" Grid.Column="2" Value="{Binding Editor.Cat.CharismaBase}" Minimum="0" Maximum="7" />
            </Grid>

            <Grid ColumnDefinitions="2*,*,*" RowDefinitions="Auto">
              <TextBlock Grid.Row="0" Grid.Column="0" Text="Luck" />
              <NumericUpDown Grid.Row="0" Grid.Column="1" Value="{Binding Editor.Cat.LuckCurrent}" Minimum="0" Maximum="99" />
              <NumericUpDown Grid.Row="0" Grid.Column="2" Value="{Binding Editor.Cat.LuckBase}" Minimum="0" Maximum="7" />
            </Grid>
          </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Margin="0,12,0,0">
          <Button Grid.Column="0" Content="Delete" Command="{Binding DeleteCommand}" />
          <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
            <Button Content="Current = Base" Command="{Binding SyncCommand}" />
            <Button Content="Cancel" Command="{Binding CancelCommand}" />
            <Button Classes="primary" Content="Save" Command="{Binding SaveCommand}" />
          </StackPanel>
        </Grid>
      </Grid>
    </Border>
  </Grid>
</UserControl>
