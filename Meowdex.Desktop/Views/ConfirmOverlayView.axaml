<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Meowdex.Desktop.Views.ConfirmOverlayView"
             x:Name="Root">
  <Grid>
    <Border Classes="overlay-panel"
            Margin="0"
            Padding="24">
      <Grid RowDefinitions="Auto,* ,Auto" ColumnDefinitions="*">
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,12">
          <TextBlock Text="Confirm" FontSize="20" FontWeight="Bold" />
          <Button Grid.Column="1" Content="âœ•" Command="{Binding CancelCommand}" />
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
          <StackPanel Spacing="12">
            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" />
          </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right" Margin="0,12,0,0">
          <Button Content="Cancel" Command="{Binding CancelCommand}" />
          <Button Classes="primary" Content="Confirm" Command="{Binding ConfirmCommand}" />
        </StackPanel>
      </Grid>
    </Border>
  </Grid>
</UserControl>
